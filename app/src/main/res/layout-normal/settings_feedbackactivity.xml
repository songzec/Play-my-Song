<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/gray"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/fbheader"
            android:textColor="@color/white"
            android:textSize="@dimen/header_text" />
    </RelativeLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:layout_marginTop="87dp"
        android:layout_below="@+id/header"
        android:layout_alignParentStart="true">

        <TableRow>

            <TextView
                android:id="@+id/fbtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/fbtitle_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="10" />


        </TableRow>

        <TableRow>

            <TextView />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/fbcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/content"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/fbcontent_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="10" />

        </TableRow>

        <TableRow>

            <TextView />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/fbemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_email"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/fbemail_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:ems="10" />

        </TableRow>
    </TableLayout>


    <Button
        android:id="@+id/fbsend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="81dp"
        android:background="@color/gray"
        android:text="@string/send"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/fbcancel"
        android:layout_toStartOf="@+id/fbcancel" />

    <Button
        android:id="@+id/fbcancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="46dp"
        android:layout_marginEnd="66dp"
        android:background="@color/gray"
        android:text="@string/cancel"
        android:textColor="@color/white" />


</RelativeLayout>
